#include <iostream>
using namespace std;
int main()
{
    int rows,i,j,k;
    cout<<"Enter the number of rows: ";
    cin>>rows;
    for(i=1; i<=rows; i++){
    for(j=1; j<=rows-i; j++){
        cout<<" ";
}
for(k=1; k<=i; k++){
    if(i%2!=0)
      cout<<"*";
     cout<<" ";
}
if(i%2==0)
cout<<"\n";
}
for(i=1; i<=rows-1; i++){
    for(j=1; j<=i; j++){
      cout<<" ";
}
for(k=1; k<=rows-i; k++){
    if(i%2==0)
      cout<<"*";
      cout<<" ";
}
if(i%2!=0)
cout<<"\n";
        }
    return 0;
}
